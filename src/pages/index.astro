---
import { info } from "@data";

import Layout from "@layouts/Layout.astro";
import Hero from "@components/home/Hero.astro";

import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";

const featureProjects = info.projects.reduce((accumulator, project) => {
  if (accumulator.length < 6 && project.isFeatured) {
    accumulator.push(project);
  }
  return accumulator;
}, []);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Portfolio"}
      description={info.about}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>

  <body>
    <Layout>
      <Hero name={info.name} about={info.about} />

      <section>
        <h2 class="text-center dark:text-light mt-16">COMPÃ‰TENCES</h2>

        <h3
          class="text-lg p-5 text-center grid md:grid-cols-5 sm:grid-cols-3 grid-cols-2 gap-8 my-16 dark:text-light mt-6"
        >
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
            >HTML5
          </span>
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
            >CSS3
          </span>
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
          >
            FLEXBOX
          </span>
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
            >GRID
          </span>
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
          >
            SCSS
          </span>
          <span
            class="text-center decoration-clone bg-gradient-to-b from-slate-400 to--500"
            >ARIA
          </span>
          <span
